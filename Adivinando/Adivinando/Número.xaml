<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Adivinando.Número">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
            <Label Text="Piensa en un número y sigue los pasos..." TextColor="Black"/>
            <Label Text="1.Ese número mutiplícalo por 2"/>
            <Label Text="2.Ahora debes sumarle 8"/>
            <Label Text="3.Ahora multiplícalo por 5"/>
            <Label Text="¿Qué resultado tienes?"/>
            <Entry Placeholder="Escribir" x:Name="resultado"/>
            <Button Text="Adivinar" Clicked="Button_Clicked" BackgroundColor="Coral"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>